<%-include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>

        <%-include('includes/navigation.ejs') %>
            <main class="centered">
               
                <article class="card product-item">
                    <form action="/admin/editproduct" method="post" class="product-form">
                    <header class="card__header">
                        <h1 class="product__title">
                            <%=product.productName%>
                        </h1>
                    </header>
                    <div class="card__image">
                        <img src="<%=product.imgUrl%>"
                            alt="apple" width="200">
                    </div>
                    <div class="card__content">
                        <h2 class="product__price">Rs.<%=product.price%></h2>
                        <p class="product__description"><%=product.description%></p>
                    </div>
                    
                    
                        <a href="/admin/edit_product/<%=product._id%>" class="btn">Edit</a>
                        
                    </form>
                    <form action="/admin/delete_product" method="post">
                        <input type="text" hidden name="id" value="<%=product._id%>">
                        <button type="submit" class="btn">Delete</button>
                    </form>
                </article>
               
                
                </main>
            </main>
            <%-include('includes/end.ejs') %>